<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>NervUI</Title>
        <Description>NervUI is light ui framework using ImGui, GLFW and OpenGL (OpenTK).
This project imgui supports viewports and docking. Currently NervUI Supports only x64</Description>
        <Copyright></Copyright>
        <PackageProjectUrl>https://github.com/byte-0x74/NervUI</PackageProjectUrl>
        <RepositoryUrl>https://github.com/byte-0x74/NervUI</RepositoryUrl>
        <PackageTags>ImGui, UI, UIX, GUI</PackageTags>
        <PackageReleaseNotes>First release</PackageReleaseNotes>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <PlatformTarget>x64</PlatformTarget>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Mochi.DearImGui" Version="0.0.2" />
        <PackageReference Include="Mochi.DearImGui.OpenTK" Version="0.0.2" />
        <PackageReference Include="OpenTK" Version="4.7.5" />
    </ItemGroup>

    <ItemGroup>
      <None Update="nerv.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

</Project>
